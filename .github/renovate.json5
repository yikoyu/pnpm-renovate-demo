{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', ':semanticCommits', ':disablePeerDependencies', 'schedule:daily', 'group:allNonMajor'],
  rangeStrategy: 'bump',
  packageRules: [
    {
      matchUpdateTypes: ['minor', 'patch', 'pin', 'digest'],
      automerge: true,
      automergeStrategy: 'squash'
    },
    {
      matchPackageNames: ['typescript'],
      automerge: false
    }
  ]
}
