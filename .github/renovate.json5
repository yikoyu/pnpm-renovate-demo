{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base", ":semanticCommits", ":preserveSemverRanges", "schedule:daily"],
  packageRules: [
    {
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      automerge: true,
    },
    {
      matchPackageNames: ["typescript"],
      automerge: false,
    },
  ],
}
